@model collectible_figures.Models.Series

@{
    ViewBag.Title = "Dodaj serię";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Dodaj serię</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label label-warning col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Dodaj" class="btn btn-warning" />
                        <button type="button"
                                class="btn btn-default"
                                onclick="location.href='@Url.Action("Index", "Series")'">
                            Powrót do listy serii
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
