@model collectible_figures.Models.Series

@{
    ViewBag.Title = "Edytuj serię";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">Edytuj serię</h3>
        </div>
        <div class="panel-body">
            @*panel content*@
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.SeriesID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Zapisz" class="btn btn-warning" />
                    </div>
                </div>
            </div>

            <hr />
            <div>
                <button type="button"
                        class="btn btn-default btn-xs"
                        onclick="location.href='@Url.Action("Index", "Series")'">
                    Powrót do listy serii
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
