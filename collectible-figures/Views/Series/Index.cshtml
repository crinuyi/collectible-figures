@model IEnumerable<collectible_figures.Models.Series>

@{
    ViewBag.Title = "Lista serii";
}

<h2>Lista serii</h2>

<p>
    @Html.ActionLink("Dodaj nową serię", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.SeriesID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.SeriesID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.SeriesID })
        </td>
    </tr>
}

</table>
